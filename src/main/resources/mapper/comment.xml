<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.CommentDao">
    <insert id="insertComment" parameterType="String">
        INSERT INTO
            shop_comments (sid, userNo, comment)
        VALUES
            (${sid}, ${userNo}, #{comment})
    </insert>

    <delete id="deleteComment" parameterType="int">
        DELETE FROM
            shop_comments
        WHERE
            cid = #{cid}
    </delete>

    <select id="getCid" resultType="com.example.demo.model.CommentModel">
        SELECT
            *
        FROM
            shop_comments
        WHERE
            cid = ${cid}
    </select>

    <update  id="updateComment" parameterType="String">
        UPDATE
            shop_comments
        SET
            comment = #{comment}
        WHERE
            cid = ${cid}
    </update>

    <select id="showComments" resultType="com.example.demo.model.CommentModel">
        SELECT
             *
        FROM
            shop_comments
        WHERE
            sid = ${sid}
        ORDER BY
            cid
    </select>

    <select id="myComments" resultType="com.example.demo.model.CommentModel">
        SELECT
            *
        FROM
            shop_comments
        WHERE
            userNo = #{userNo}
    </select>
</mapper>